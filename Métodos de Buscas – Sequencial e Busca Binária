#include <stdio.h>
main()
{
int vet[50], i, j, n, aux, inicio, meio, fim, achou, qtd1=0, qtd2=0;
// leitura do vetor
for(i=0; i<50; i++)
{ printf(“\nElemento[%d]: “, i);
scanf(“%d”, &vet[i]);
}
// leitura de n
printf(“\nValor Procurado: “);
scanf(“%d”, &n);
// Ordenação do vetor - Método da Bolha
for(j=49; j>0; j--) // Determina a posição de parada
for(i=0; i<j; i++)
if (vet[i]>vet[i+1])
{
aux=vet[i];
vet[i]=vet[i+1];
vet[i+1]=aux;
}
// Busca Sequencial
i=0;
while (vet[i]<=n)
{
if(vet[i]==n)
achou=1;
qtd1++;
i++;
}
// busca binária
achou=0;
inicio=0;
fim=49;
meio=(inicio+fim)/2;
while ((!achou) && (inicio <=fim))
{
if (vet[meio]==n)
achou=1;
else if (n<vet[meio])
fim=meio-1;
else inicio=meio+1;
meio=(inicio+fim)/2;
qtd2++;
}
// exibição do vetor
printf(“\n\nVetor lido e ordenado: “);
for(i=0;i<50;i++)
printf(“ %d, “,vet[i]);
// exibição do valor procurado
printf(“\n\nValor procurado: %d“, n);
// Exibição do resultado das buscas
if (achou)
{
printf(“\n\nForam necessárias %d verificações para achar o valor %d de forma
sequencial”, qtd1, n);
printf(“\n\nForam necessárias %d verificações para achar o valor %d usando a
Busca Binária”, qtd2, n);
}
else printf(“\n\nO valor procurado não se encontra no vetor!”);
}
