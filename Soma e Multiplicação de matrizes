#include <stdio.h>
main()
{
int m1[10][10], m2[10][10], m3[10][10], m4[10][10], i, j, k, l1, l2, c1, c2;
// leitura da ordem da matriz 1
do {
printf("\nLinhas da Matriz 1: ");
scanf("%d", &l1);
} while ((l1<2) || (l1>10));
do {
printf("\nColunas da Matriz 1: ");
scanf("%d", &c1);
} while ((c1<2) || (c1>10));
// Leitura da matriz 1
for(i=0; i<l1; i++)
for(j=0; j<c1; j++)
{
printf("Matriz 1[%d][%d]: ", i,j);
scanf("%d", &m1[i][j]);
}
// leitura da ordem da matriz 2
do {
printf("\nLinhas da Matriz 2: ");
scanf("%d", &l2);
} while ((l2<2) || (l2>10));
do {
printf("\nColunas da Matriz 1: ");
scanf("%d", &c2);
} while ((c2<2) || (c2>10));
// Leitura da matriz 2
for(i=0; i<l2; i++)
for(j=0; j<c2; j++)
{
printf("Matriz 2[%d][%d]: ", i,j);
scanf("%d", &m2[i][j]);
}
// Exibição da matriz 1
printf("\n\nMatriz 1\n");
for(i=0; i<l1; i++)
{
for(j=0; j<c1; j++)
printf("%3d ", m1[i][j]);
printf("\n");
}
// Exibição da matriz 2
printf("\n\nMatriz 2\n");
for(i=0; i<l2; i++)
{
for(j=0; j<c2; j++)
printf("%3d ", m2[i][j]);
printf("\n");
}
// verifica a possibilidade de realizar a soma
if ((l1==l2) && (c1==c2))
{
// realizar a soma
for(i=0; i<l1; i++)
for(j=0; j<c1; j++)
m3[i][j]=m1[i][j]+m2[i][j];
// exibir a matriz soma
printf("\n\nMatriz Soma\n");
for(i=0; i<l1; i++)
{
for(j=0; j<c1; j++)
printf("%3d ", m3[i][j]);
printf("\n");
}
}
else printf ("\n\nA soma da matrizes não é possivel, ordem diferentes");
// verifica a possibilidade de realizar a mutilplicação
if (c1==l2)
{
// zera a matriz multiplicação
for(i=0; i<l1; i++)
for(j=0; j<c2; j++)
m4[i][j]=0;
// realizar a mutiplicação
for(i=0; i<l1; i++)
for(j=0; j<c1; j++)
for(k=0; k<c1; k++)
m4[i][j]=m4[i][j]+m1[i][k]*m2[k][j];
// exibir a matriz multiplicação
printf("\n\nMatriz Multiplicacao\n");
for(i=0; i<l1; i++)
{
for(j=0; j<c2; j++)
printf("%3d ", m4[i][j]);
printf("\n");
}
}
else printf ("\n\nA qtd de colunas da matriz 1 é diferente da qtd de colunas da matriz 2");
}
